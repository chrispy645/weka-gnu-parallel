#!/bin/bash

WGP_SCRIPT=$1

if [ -z $WGP_SCRIPT ]; then
	echo "Need to provide dir to script file on remote!"
	exit 1
fi

echo "Running script on remote: "$WGP_SCRIPT

export WGP_SCRIPT

parallel -k \
-a foo/param-input.txt \
--colsep ' ' \
--no-notice \
--sshloginfile foo/sshlogins.txt \
--results results \
--env WGP_SCRIPT \
$WGP_SCRIPT ::: {1} {2} {3}
